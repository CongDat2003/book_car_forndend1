<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    android:background="?attr/colorSurfaceContainer"
    android:elevation="2dp">

    <TextView
        android:id="@+id/textViewServiceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên dịch vụ"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textViewVehicleInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Biển số xe - Tên xe"
        android:layout_marginTop="4dp"
        android:textAppearance="?attr/textAppearanceBodyMedium"/>

    <TextView
        android:id="@+id/textViewAppointmentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày hẹn: 25/12/2025 14:30"
        android:layout_marginTop="4dp"
        android:textAppearance="?attr/textAppearanceBodyMedium"/>

    <TextView
        android:id="@+id/textViewStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trạng thái: PENDING"
        android:layout_marginTop="8dp"
        android:textStyle="italic"
        android:textAppearance="?attr/textAppearanceBodySmall"/>

</LinearLayout>